%{if length(webservers) > 0}
[webservers]
%{for vm in webservers }
${vm.name}   ansible_host=${vm.network_interface.0.nat_ip_address} fqdn=${vm.fqdn}
%{endfor}
%{endif}

%{if length(databases) > 0}
[databases]
%{for name, vm in databases }
${name}   ansible_host=${vm.network_interface.0.nat_ip_address} fqdn=${vm.fqdn}
%{endfor}
%{endif}

%{if storage != null}
[storage]
storage   ansible_host=${storage.network_interface.0.nat_ip_address} fqdn=${storage.fqdn}
%{endif}